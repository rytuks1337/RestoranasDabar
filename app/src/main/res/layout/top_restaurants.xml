<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_res_info"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/top_res_img"
                android:layout_width="250dp"
                android:layout_height="160dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/res3" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/top_res_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-black"
                android:text="Res Name"
                android:textColor="@color/black"
                android:textSize="21sp"
                app:layout_constraintStart_toStartOf="@+id/top_res_img"
                app:layout_constraintTop_toBottomOf="@+id/top_res_img" />

            <ImageView
                android:id="@+id/ic1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:tint="#000000"
                app:layout_constraintStart_toStartOf="@+id/top_res_name"
                app:layout_constraintTop_toBottomOf="@+id/top_res_name"
                app:srcCompat="@drawable/ic_place" />

            <TextView
                android:id="@+id/top_res_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/ic2"
                app:layout_constraintStart_toEndOf="@+id/ic1"
                app:layout_constraintTop_toTopOf="@+id/ic1"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/ic2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="6dp"
                android:tint="@color/black"
                app:layout_constraintStart_toStartOf="@+id/ic1"
                app:layout_constraintTop_toBottomOf="@+id/ic1"
                app:srcCompat="@drawable/ic_call" />

            <TextView
                android:id="@+id/top_res_numb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/ic3"
                app:layout_constraintStart_toEndOf="@+id/ic2"
                app:layout_constraintTop_toBottomOf="@+id/ic1" />

            <ImageView
                android:id="@+id/ic3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toStartOf="@+id/ic2"
                app:layout_constraintTop_toBottomOf="@+id/ic2"
                app:srcCompat="@drawable/ic_clock"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/top_res_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="TextView"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/ic3"
                app:layout_constraintStart_toEndOf="@+id/ic3"
                app:layout_constraintTop_toBottomOf="@+id/ic2"
                app:layout_constraintVertical_bias="0.857" />

            <RatingBar
                android:id="@+id/top_rating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toEndOf="@+id/top_res_img"
                app:layout_constraintTop_toBottomOf="@+id/top_res_img" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>