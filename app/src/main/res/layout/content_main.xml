<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="120dp"
    android:fillViewport="true">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        tools:showIn="@layout/app_bar_main">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_gravity="center"
            card_view:cardElevation="20dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            card_view:cardCornerRadius="4dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageView1"
                    android:tag="image_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/res1"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/textViewName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="Amber Grill"
                        android:textAppearance="?android:attr/textAppearanceLarge"/>
                    <RatingBar
                        android:id="@+id/rating_rating_bar1"
                        android:layout_width="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:numStars="5"
                         />

                    <TextView
                    android:id="@+id/textViewVersion1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:text="Grill restaurant"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                    <TextView
                        android:id="@+id/textLocation"
                        android:drawableLeft="@drawable/ic_place"
                        android:drawablePadding="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:textSize="11sp"
                        android:text="Android Version"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <TextView
                        android:id="@+id/textSchedule"
                        android:drawableLeft="@drawable/ic_clock"
                        android:drawablePadding="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:textSize="11sp"
                        android:text="Android Version"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>
                    <TextView
                        android:id="@+id/textNumb"
                        android:drawableLeft="@drawable/ic_call"
                        android:drawablePadding="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:textSize="11sp"
                        android:text="Android Version"
                        android:textAppearance="?android:attr/textAppearanceMedium"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
